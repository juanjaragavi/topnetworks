---
import '@fontsource-variable/montserrat';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Montserrat Variable';
    --aw-font-serif: 'Montserrat Variable';
    --aw-font-heading: 'Montserrat Variable';

    /* TopNetworks Palette - Light Mode */
    --aw-color-primary: rgb(30 76 138); /* Deep Blue */
    --aw-color-secondary: rgb(47 128 237); /* Medium Blue */
    --aw-color-accent: rgb(130 201 30); /* Bright Green */

    --aw-color-text-heading: rgb(30 76 138); /* Deep Blue for headings */
    --aw-color-text-default: rgb(51 51 51); /* Dark Gray for body text */
    --aw-color-text-muted: rgb(100 100 100 / 66%); /* Lighter Gray for muted text */
    --aw-color-bg-page: rgb(255 255 255); /* White background */

    /* Additional Palette Colors */
    --tn-color-light-blue: rgb(86 204 242);
    --tn-color-teal: rgb(80 184 179);
    --tn-color-lavender: rgb(169 160 215);
    --tn-color-light-yellow: rgb(242 201 76);

    ::selection {
      background-color: rgb(130 201 30 / 0.3); /* Bright Green selection with opacity */
    }
  }

  .dark {
    --aw-font-sans: 'Montserrat Variable';
    --aw-font-serif: 'Montserrat Variable';
    --aw-font-heading: 'Montserrat Variable';

    /* TopNetworks Palette - Dark Mode */
    --aw-color-primary: rgb(47 128 237); /* Medium Blue as primary for dark */
    --aw-color-secondary: rgb(86 204 242); /* Light Blue as secondary for dark */
    --aw-color-accent: rgb(130 201 30); /* Bright Green */

    --aw-color-text-heading: rgb(255 255 255); /* White for headings */
    --aw-color-text-default: rgb(229 236 246); /* Light Gray/Off-White for body text */
    --aw-color-text-muted: rgb(200 200 200 / 66%); /* Lighter Gray for muted text */
    --aw-color-bg-page: rgb(30 76 138); /* Deep Blue background */

    /* Additional Palette Colors (can be same as light or adjusted) */
    --tn-color-light-blue: rgb(86 204 242);
    --tn-color-teal: rgb(80 184 179);
    --tn-color-lavender: rgb(169 160 215);
    --tn-color-light-yellow: rgb(242 201 76);

    ::selection {
      background-color: rgb(130 201 30 / 0.4); /* Bright Green selection with opacity */
      color: rgb(255 255 255);
    }
  }
</style>
