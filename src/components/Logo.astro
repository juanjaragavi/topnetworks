---
import Image from '~/components/common/Image.astro';
import logoSrc from '~/assets/logo/topnetworks-logo.webp';
import { SITE } from 'astrowind:config'; // SITE is still used for alt text
---

{
  logoSrc && (
    <Image
      src={logoSrc}
      alt={SITE?.name ? `${SITE.name} Logo` : 'TopNetworks Logo'}
      width={150}
      height={60}
      loading="eager"
    />
  )
}
