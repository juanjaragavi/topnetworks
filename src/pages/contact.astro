---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro'; // This is actually Contact.astro
import Features2 from '~/components/widgets/Features2.astro';
import { SITE } from 'astrowind:config'; // To use SITE.name if needed

const metadata = {
  title: 'Contacto', // Translated
  // Removed ignoreTitleTemplate, default template is "%s — TopNetworks" which is good.
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contacto" title="¡Ponte en Contacto con Nosotros!" />

  {/* Added id for potential future anchor */}
  <ContactUs
    id="formulario-contacto"
    title="¡Envíanos un mensaje hoy mismo!"
    subtitle="Para respuestas más rápidas, explora nuestra sección de Preguntas Frecuentes (FAQs). ¡Quizás encuentres la solución que buscas allí mismo! Si no, nuestro equipo de soporte estará encantado de ayudarte."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre Completo',
        placeholder: 'Tu nombre completo',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Correo Electrónico',
        placeholder: 'tu.email@ejemplo.com',
      },
    ]}
    textarea={{
      label: 'Mensaje',
      name: 'message',
      placeholder: 'Escribe tu consulta o requerimiento aquí...',
    }}
    disclaimer={{
      label:
        'Al enviar este formulario, reconoces y aceptas la recopilación de tu información personal de acuerdo con nuestra <a class="text-primary hover:underline dark:text-gray-200" href="/privacy">política de privacidad</a>.',
    }}
    button="Enviar Mensaje"
    description="Nuestro equipo de soporte generalmente responde dentro de las 24 horas hábiles."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Estamos aquí para ayudarte"
    items={[
      {
        title: 'Consultas Generales',
        description:
          'Si tienes preguntas sobre TopNetworks, nuestros servicios, o cómo podemos colaborar, no dudes en escribirnos.',
        icon: 'tabler:message-question', // Changed icon
      },
      {
        title: 'Oportunidades de Colaboración',
        description:
          'Interesado en asociarte con TopNetworks o explorar sinergias? Contáctanos para discutir posibles colaboraciones.',
        icon: 'tabler:users-group', // Changed icon
      },
      {
        title: 'Soporte Técnico',
        description:
          'Si encuentras algún problema técnico en nuestro sitio web o plataformas, por favor infórmanos para que podamos asistirte.',
        icon: 'tabler:settings-cog', // Changed icon
      },
      {
        title: 'Correo Electrónico de Contacto',
        description: `Puedes escribirnos directamente a <a href="mailto:contacto@${SITE.site?.replace(/^https?:\/\//, '')}" class="text-primary hover:underline dark:text-gray-200">contacto@${SITE.site?.replace(/^https?:\/\//, '')}</a>.`,
        icon: 'tabler:mail',
      },
      // {
      //   title: 'Nuestra Oficina (Referencial)',
      //   description: 'TopNetworks Inc. opera globalmente con una estructura flexible. Para correspondencia formal, por favor contactar vía email.',
      //   icon: 'tabler:building-community',
      // },
    ]}
  />
</Layout>
