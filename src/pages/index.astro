---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import AnimatedDeviceShowcase from '~/components/widgets/AnimatedDeviceShowcase.tsx'; // Updated import to .tsx
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro'; // Added
import Headline from '~/components/ui/Headline.astro'; // Added
import ItemGrid from '~/components/ui/ItemGrid.astro'; // Added
import Contact from '~/components/widgets/Contact.astro'; // Added Contact
import FAQs from '~/components/widgets/FAQs.astro';

// Import brand logos
import topfinanzasMexicoLogo from '~/assets/logo/topfinanzas-logo-mexico.png';
import topfinanzasUsLogo from '~/assets/logo/topfinanzas-logo-us.webp';
import topfinanzasUkLogo from '~/assets/logo/topfinanzas-logo.webp'; // Generic for UK
import budgetbeeLogo from '~/assets/logo/budgetbee-logo.webp';

// Import founder images
import juanHoyosImg from '~/assets/images/juan-hoyos.webp';
import francisLockImg from '~/assets/images/francis-lock.webp';
import camiloGomezImg from '~/assets/images/camilo-gomez.webp';
import Stats from '~/components/widgets/Stats.astro';
// import CallToAction from '~/components/widgets/CallToAction.astro'; // Removed as it's no longer used on this page

const metadata = {
  title: 'TopNetworks Inc. — Optimizando la Publicidad Digital',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Conoce Más',
        href: '#servicios',
        icon: 'tabler:arrow-down-circle',
      },
      { text: 'Contáctanos', href: '/contact' },
    ]}
  >
    <AnimatedDeviceShowcase slot="image" client:visible />
    {/* Added client:visible here */}
    <Fragment slot="title">
      <span class="text-accent dark:text-white">TopNetworks Inc.</span>
      <br />Optimizando la Experiencia Digital
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        En <span class="font-semibold">TopNetworks</span>, somos una empresa de tecnología de vanguardia. Desarrollamos
        y perfeccionamos continuamente modelos de monetización basados en performance marketing, agregando valor tanto a
        usuarios como a anunciantes.
      </span>
      <span class="block mb-1 sm:hidden font-bold text-secondary">TopNetworks: Conectamos Valor.</span>
      Especialistas en optimización de publicidad digital programática con un enfoque "mobile-first", iniciando en el dinámico
      sector financiero.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note
    title="Nuestra Filosofía:"
    description="Agregar valor a usuarios y anunciantes, monetizando su interacción de manera efectiva y mejorando continuamente el recorrido de información del usuario."
  />

  <!-- Features Widget *************** -->

  <Features
    id="servicios"
    tagline="Servicios Clave"
    title="Potenciamos tu Estrategia Digital"
    subtitle="Descubre cómo nuestros servicios especializados pueden transformar tus resultados en el competitivo mercado digital."
    items={[
      {
        title: 'Generación y Producción de Contenido',
        description:
          'Creamos contenido relevante y optimizado utilizando modelos SEO, Inbound y nuestro exclusivo Modelo de Optimización TopNetworks enfocado en "mobile-first".',
        icon: 'tabler:file-text',
      },
      {
        title: 'Atracción y Monetización de Audiencias',
        description:
          'Conectamos usuarios informados con anunciantes relevantes, proporcionando información clara y objetiva para maximizar el rendimiento y la efectividad publicitaria.',
        icon: 'tabler:users-group',
      },
      {
        title: 'Tecnología y Operación Avanzada',
        description:
          'Empleamos más de 10 herramientas digitales para una gestión eficiente de creatividades, tareas técnicas, integraciones, control de calidad y flujo de datos, asegurando escalabilidad.',
        icon: 'tabler:settings-cog',
      },
      {
        title: 'Optimización Mobile-First',
        description:
          'Nuestro enfoque "mobile-first" garantiza que todas las estrategias y contenidos estén perfectamente adaptados para el consumo en dispositivos móviles, maximizando el alcance y la interacción.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Performance Marketing Basado en Datos',
        description:
          'Desarrollamos y optimizamos modelos de monetización que se basan en el análisis de datos y el rendimiento para asegurar ingresos publicitarios superiores al costo de adquisición.',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'Expansión Estratégica',
        description:
          'Nuestro modelo de negocio está diseñado para una fácil expansión a nuevos mercados y verticales, replicando el éxito y adaptándonos a las necesidades locales.',
        icon: 'tabler:world-longitude',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    id="quienes-somos"
    isReversed
    tagline="Quiénes Somos"
    title="TopNetworks Inc: Innovación en Publicidad Digital"
    items={[
      {
        title: 'Tecnología de Vanguardia',
        description:
          'Nos especializamos en la optimización de la publicidad digital mediante redes programáticas, con un fuerte enfoque en el sector financiero.',
      },
      {
        title: 'Modelo Mobile-First',
        description:
          'Diseñamos nuestras soluciones priorizando la experiencia móvil, adaptándonos al creciente mercado de la publicidad en dispositivos móviles.',
      },
      {
        title: 'Valor para Usuarios y Anunciantes',
        description:
          'Cerramos la brecha entre los intereses de los usuarios y la oferta de los anunciantes, mejorando la eficiencia y construyendo confianza.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Equipo TopNetworks trabajando',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Conectando Intereses, Optimizando Resultados
      </h3>
      En TopNetworks, transformamos la interacción digital en valor tangible.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-slate-50 dark:bg-slate-900"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    id="estrategia-contenido"
    isAfterContent
    tagline="Estrategia de Contenido"
    title="Contenido Inteligente que Impulsa el Crecimiento"
    items={[
      {
        title: 'Modelo SEO',
        description: `Producimos contenido optimizado para motores de búsqueda, asegurando máxima relevancia y posicionamiento en Google.`,
      },
      {
        title: 'Modelo Inbound',
        description:
          'Creamos contenidos que guían al usuario a través del embudo de conversión (TOFU, MOFU, BOFU), fomentando el interés y mejorando la interacción.',
      },
      {
        title: 'Optimización TopNetworks',
        description:
          'Nuestro modelo propio "mobile-first" optimiza la estructura y diseño del contenido para un consumo fácil en móviles y una monetización superior.',
      },
      {
        title: 'Contenido Diferencial',
        description:
          'Adaptamos el diseño del contenido según la etapa del embudo, buscando en la etapa BOFU una afinidad con la marca del producto para potenciar el rendimiento.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Estrategia de Contenido Visualizada',
    }}
  >
    <Fragment slot="content"
      >El contenido es el pilar de una experiencia de usuario valiosa y una monetización efectiva.</Fragment
    >

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-slate-50 dark:bg-slate-900"></div>
    </Fragment>
  </Content>

  <!-- Nuestras Marcas Widget (Refactored to ItemGrid 2x2) **************** -->
  <WidgetWrapper id="nuestras-marcas" isDark={false} containerClass="py-8 md:py-12 lg:py-16">
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-white dark:bg-slate-900"></div>
    </Fragment>
    <Headline
      tagline="Nuestras Marcas"
      title="Portales Especializados para Audiencias Conectadas"
      subtitle="Desarrollamos y operamos una red de portales de contenido especializados, diseñados para ser altamente escalables."
      classes={{
        container: 'max-w-xl sm:mx-auto lg:max-w-2xl text-center',
        title: 'text-4xl md:text-5xl font-bold tracking-tighter mb-4 font-heading',
        subtitle: 'max-w-3xl mx-auto sm:text-center text-xl text-muted dark:text-slate-400',
      }}
    />
    <div class="mx-auto max-w-5xl px-4 md:px-8 mt-8 md:mt-12">
      <ItemGrid
        columns={2}
        items={[
          {
            title: 'TopFinanzas México',
            description:
              'Nuestra plataforma validada. Comunidad de finanzas personales ayudando a tomar mejores decisiones financieras. Más de 90,000 usuarios únicos al mes.',
            image: { src: topfinanzasMexicoLogo, alt: 'TopFinanzas México Logo' },
          },
          {
            title: 'TopFinanzas USA',
            description:
              'Expansión al mercado estadounidense. Lanzamiento planificado para Q4 2024, aprovechando un mercado publicitario de $298.4bn.',
            image: { src: topfinanzasUsLogo, alt: 'TopFinanzas USA Logo' },
          },
          {
            title: 'TopFinanzas UK',
            description:
              'Próxima entrada al Reino Unido en Q1 2025. Un mercado con una inversión publicitaria digital estimada de $44.4bn.',
            image: { src: topfinanzasUkLogo, alt: 'TopFinanzas UK Logo' },
          },
          {
            title: 'BudgetBee',
            description:
              "'Your Hive for Unbiased Financial Buzz'. Plataforma para Gen Z y Millennials, enfocada en tarjetas de crédito, presupuestos y finanzas personales.",
            image: { src: budgetbeeLogo, alt: 'BudgetBee Logo' },
          },
        ]}
        classes={{
          container: 'gap-8 md:gap-12', // Grid styling for items
          panel:
            'text-left p-6 rounded-lg bg-slate-50 dark:bg-slate-800 shadow-xl hover:shadow-2xl transition-shadow duration-300 flex flex-col items-center', // Added items-center for horizontal centering of image
          image: 'h-20 w-auto mb-4 self-center object-contain', // Changed from icon, increased size, self-center
          title: 'text-2xl font-bold text-gray-900 dark:text-white mb-3 text-center', // Centered title
          description: 'text-md text-gray-700 dark:text-slate-300 flex-grow text-center', // Centered description
        }}
      />
    </div>
  </WidgetWrapper>

  <!-- Steps Widget ****************** -->

  <Steps
    id="nuestro-proceso"
    title="Nuestro Proceso: Maximizando tu Retorno de Inversión Digital"
    items={[
      {
        title: 'Paso 1: <span class="font-medium">Análisis y Estrategia</span>',
        description:
          'Comprendemos tus necesidades y el mercado. Investigamos tendencias y definimos la estrategia de contenido y publicidad más efectiva para tus objetivos.',
        icon: 'tabler:search',
      },
      {
        title: 'Paso 2: <span class="font-medium">Producción Optimizada</span>',
        description:
          "Creamos contenido de alto impacto aplicando nuestros modelos SEO, Inbound y de Optimización TopNetworks, con un enfoque 'mobile-first' para máxima resonancia.",
        icon: 'tabler:file-pencil',
      },
      {
        title: 'Paso 3: <span class="font-medium">Atracción de Audiencia</span>',
        description:
          'Lanzamos campañas de tráfico segmentadas en medios digitales, atrayendo usuarios interesados y cualificados a nuestras plataformas y a tus ofertas.',
        icon: 'tabler:target-arrow',
      },
      {
        title: 'Paso 4: <span class="font-medium">Monetización y Optimización</span>',
        description:
          'Implementamos estrategias de performance marketing, analizando datos continuamente para optimizar la monetización y asegurar un crecimiento sostenible.',
        icon: 'tabler:trending-up',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Proceso TopNetworks',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    id="ventajas"
    title="¿Por Qué Elegir TopNetworks?"
    subtitle="Resultados comprobados y un enfoque innovador nos distinguen en el mercado de la publicidad digital."
    tagline="Ventajas Competitivas"
    items={[
      {
        title: 'Experiencia Comprobada',
        description:
          'Fundadores con más de 15 años en publicidad digital y AdTech. Éxito validado con TopFinanzas México.',
        icon: 'flat-color-icons:approval',
      },
      {
        title: 'Tecnología de Punta',
        description:
          'Utilizamos un stack de más de 10 herramientas para una operación eficiente, centralizada y escalable.',
        icon: 'flat-color-icons:settings',
      },
      {
        title: 'Resultados Superiores',
        description:
          'Logramos tasas de interacción (CTR) significativamente más altas que el promedio del mercado (e.g., 28.7% vs 0.5%).',
        icon: 'flat-color-icons:bar-chart',
      },
      {
        title: 'Enfoque Mobile-First',
        description:
          'Nuestras estrategias están diseñadas primordialmente para dispositivos móviles, capturando la mayor parte del mercado publicitario.',
        icon: 'flat-color-icons:smartphone-tablet',
      },
      {
        title: 'Escalabilidad Global',
        description:
          'Nuestro modelo de negocio está preparado para la expansión vertical (países) y horizontal (nichos de mercado).',
        icon: 'flat-color-icons:globe',
      },
      {
        title: 'Relaciones Estratégicas',
        description: 'Acceso directo y colaboración con gigantes de la industria como Google, Amazon, Meta y TikTok.',
        icon: 'flat-color-icons:contacts',
      },
      {
        title: 'Optimización Continua',
        description: 'Nos basamos en datos para perfeccionar constantemente la relación entre usuarios y anunciantes.',
        icon: 'flat-color-icons:data-configuration',
      },
      {
        title: 'Transparencia y Objetividad',
        description:
          'Proporcionamos información clara y confiable, construyendo confianza y mejorando la toma de decisiones.',
        icon: 'flat-color-icons:inspection',
      },
      {
        title: 'Visión de Futuro',
        description:
          'Estamos alineados con las tendencias macro de la digitalización bancaria y la publicidad programática.',
        icon: 'flat-color-icons:bullish',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Founders Widget ***************** -->
  <WidgetWrapper id="founders" isDark={false} containerClass="py-8 md:py-12 lg:py-16">
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-slate-50 dark:bg-slate-900"></div>
    </Fragment>
    <Headline
      tagline="Nuestro Equipo"
      title="Conoce a los Fundadores de TopNetworks"
      subtitle="La experiencia y visión que impulsan nuestra innovación en el mercado digital."
      classes={{
        container: 'max-w-xl sm:mx-auto lg:max-w-2xl text-center',
        title: 'text-4xl md:text-5xl font-bold tracking-tighter mb-4 font-heading',
        subtitle: 'max-w-3xl mx-auto sm:text-center text-xl text-muted dark:text-slate-400',
      }}
    />
    <div class="mx-auto max-w-7xl px-4 md:px-8 mt-8 md:mt-12">
      <ItemGrid
        columns={3}
        items={[
          {
            title: 'Juan Hoyos',
            description:
              'Estrategia digital, publicidad y marketing digital, MarTech y tecnología. Empresario. <br/><strong class="text-primary">Enfoque TOP:</strong> UX, contenidos, canales digitales, ingeniería, infraestructura y negocio.',
            image: { src: juanHoyosImg, alt: 'Juan Hoyos' },
          },
          {
            title: 'Francis Lock',
            description:
              'Estrategia y comercialización de medios y publicidad digital. Empresario. <br/><strong class="text-primary">Enfoque TOP:</strong> buy-side Performance Advertising, networks y data analytics.',
            image: { src: francisLockImg, alt: 'Francis Lock' },
          },
          {
            title: 'Camilo Gómez',
            description:
              'Consultor y (ex)líder regional de business dev. de plataforma AdTech: Google Ad Manager. <br/><strong class="text-primary">Enfoque TOP:</strong> Sell-side AdTech expert, Partner Relations y Cultura TOP.',
            image: { src: camiloGomezImg, alt: 'Camilo Gómez' },
          },
        ]}
        classes={{
          container: 'gap-8 md:gap-12',
          panel:
            'text-center p-6 rounded-lg bg-white dark:bg-slate-800 shadow-md hover:shadow-lg transition-shadow duration-300 flex flex-col items-center h-full', // Added h-full for equal height
          image: 'w-32 h-32 rounded-lg shadow-lg mb-4 object-cover border-4 border-slate-200 dark:border-slate-700', // Rounded image with border and shadow
          title: 'text-xl font-semibold text-gray-900 dark:text-white mb-2',
          description: 'text-sm text-gray-600 dark:text-slate-400 text-left', // Changed to text-left
        }}
      />
    </div>
  </WidgetWrapper>

  <!-- FAQs Widget ******************* -->

  <FAQs
    id="faqs"
    title="Preguntas Frecuentes"
    subtitle="Encuentra respuestas a las dudas más comunes sobre nuestros servicios, tecnología y cómo TopNetworks puede ayudarte a alcanzar tus objetivos."
    tagline="Resolviendo Dudas"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: '¿Qué es TopNetworks Inc. y a qué se dedica?',
        description:
          "TopNetworks Inc. es una empresa de tecnología que optimiza la publicidad digital a través de redes programáticas. Nos enfocamos en mejorar la experiencia de usuarios y anunciantes, monetizando su interacción con un modelo 'mobile-first', especialmente en el sector financiero.",
      },
      {
        title: '¿Cuál es el principal valor que ofrecen a los anunciantes?',
        description:
          'Ofrecemos a los anunciantes acceso a audiencias altamente segmentadas y con interés real, mejorando la efectividad de sus campañas. Nuestra plataforma y contenidos generan tasas de interacción muy superiores al promedio del mercado.',
      },
      {
        title: '¿Y qué beneficios obtienen los usuarios?',
        description:
          'Los usuarios reciben información clara, objetiva y comparativa que les ayuda a tomar decisiones bien fundamentadas, especialmente en temas financieros. Combatimos la saturación publicitaria y la falta de información confiable.',
      },
      {
        title: '¿Qué es el enfoque "mobile-first"?',
        description:
          'Significa que todas nuestras plataformas, contenidos y estrategias están diseñados y optimizados primordialmente para su consumo en dispositivos móviles, donde se concentra la mayor parte de la actividad digital y publicitaria.',
      },
      {
        title: '¿Qué tipo de tecnologías utilizan?',
        description:
          'Utilizamos un conjunto de más de 10 herramientas especializadas para la gestión de contenido, SEO, marketing automation, análisis de datos, publicidad programática (como Google Ad Manager) y optimización de la experiencia de usuario.',
      },
      {
        title: '¿Tienen experiencia comprobada en el mercado?',
        description:
          'Sí, nuestra plataforma TopFinanzas en México ha validado exitosamente nuestro modelo de negocio, alcanzando más de 90,000 usuarios únicos al mes y una tasa de interacción en anuncios del 28.7%. Nuestros fundadores cuentan con más de 15 años de experiencia en el sector.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Usuarios Únicos/Mes (TopFinanzas MX)', amount: '+90K' },
      { title: 'CTR Promedio en Anuncios', amount: '28.7%' },
      { title: 'Artículos Publicados (TopFinanzas MX)', amount: '+200' },
      { title: 'Expansión Global (Próximamente)', amount: 'USA & UK' },
    ]}
  />

  <!-- Contact Widget (Replaces CallToAction) *********** -->
  <Contact
    id="contacto"
    title="Hablemos de tu Proyecto"
    subtitle="Completa el formulario y nuestro equipo se pondrá en contacto contigo para explorar cómo TopNetworks puede potenciar tu estrategia digital."
    button="Enviar Mensaje"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre completo',
        placeholder: 'Tu nombre completo',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Correo electrónico',
        placeholder: 'tu.email@ejemplo.com',
      },
    ]}
    textarea={{
      label: 'Mensaje',
      name: 'message',
      placeholder: 'Escribe tu consulta o requerimiento aquí...',
      rows: 4,
    }}
    disclaimer={{
      label:
        'Al enviar este formulario, aceptas nuestra <a class="text-primary hover:underline dark:text-gray-200" href="/privacy">política de privacidad</a>.',
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-slate-100 dark:bg-slate-800"></div>
    </Fragment>
  </Contact>
</Layout>
